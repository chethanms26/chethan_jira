{
  "name": "handcrafted-goods-marketplace",
  "version": "1.0.0",
  "description": "Online Marketplace for Handcrafted Goods",
  "main": "index.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon src/backend/server.js",
    "dev:frontend": "cd src/frontend && npm start",
    "test": "jest",
    "install:all": "npm install && cd src/frontend && npm install && cd ../backend && npm install"
  },
  "keywords": ["handcrafted", "marketplace", "artisans"],
  "author": "TOTAL-CODERS",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "nodemon": "^3.0.0"
  }
}